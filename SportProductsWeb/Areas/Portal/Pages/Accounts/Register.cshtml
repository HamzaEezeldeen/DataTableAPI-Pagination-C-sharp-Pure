@page
@model SportProductsWeb.Areas.Portal.Pages.Accounts.RegisterModel
@{
    ViewData["Title"] = "Sign up";
}


<section class="h-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px; background-color: #eee;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">@ViewData["Title"]</p>
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <form id="registerForm" method="post">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="ReqInput.FullName"></label>
                                            <input class="form-control" asp-for="ReqInput.FullName" />
                                            <span class="text-danger" asp-validation-for="ReqInput.FullName"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="ReqInput.Address"></label>
                                            <input class="form-control" asp-for="ReqInput.Address" />
                                            <span class="text-danger" asp-validation-for="ReqInput.Address"></span>

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="ReqInput.Email"></label>
                                            <input class="form-control" asp-for="ReqInput.Email" />
                                            <span class="text-danger" asp-validation-for="ReqInput.Email"></span>

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="ReqInput.Password"></label>
                                            <input class="form-control" autocomplete="new-password" asp-for="ReqInput.Password" />
                                            <span class="text-danger" asp-validation-for="ReqInput.Password"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label asp-for="ReqInput.ConfrimPassword"></label>
                                            <input class="form-control" autocomplete="new-password" asp-for="ReqInput.ConfrimPassword" />
                                            <span class="text-danger" asp-validation-for="ReqInput.ConfrimPassword"></span>
                                        </div>
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" asp-for="ReqInput.IsAgree" />
                                        <label class="form-check-label">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}